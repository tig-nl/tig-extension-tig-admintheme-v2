<layout version="0.1.0">
    <default>
        <reference name="head">
            <action method="removeItem"><type>skin_css</type><name>boxes.css</name></action>
            <action method="removeItem"><type>skin_css</type><name>menu.css</name></action>
            <action method="addCss"><name>css/TIG/Admintheme/theme.css</name></action>
            <action method="addCss"><name>css/TIG/Admintheme/boxes.css</name></action>
            <action method="addCss"><name>css/TIG/Admintheme/menu.css</name></action>
            <action method="addJS"><name>lib/jquery/jquery-1.10.2.min.js</name></action>
            <action method="addJs"><script>lib/jquery/noconflict.js</script></action>
            <action method="addJS"><name>lib/jquery/jquery.menu-aim.js</name></action>
            <action method="addItem"><type>skin_css</type><name>css/TIG/Admintheme/font-awesome.css</name></action>
            <action method="addItem"><type>skin_css</type><name>css/TIG/Admintheme/font-awesome.min.css</name></action>
        </reference>
    </default>

    <adminhtml_index_login>
    	<reference name="content">
    		<action method="setTemplate">
    			<template>TIG/Admintheme/login.phtml</template>
    		</action>
    	</reference>
    </adminhtml_index_login>

    <adminhtml_index_forgotpassword>
    	<reference name="content">
    		<action method="setTemplate">
    			<template>TIG/Admintheme/forgotpassword.phtml</template>
    		</action>
    	</reference>
    </adminhtml_index_forgotpassword>
</layout>